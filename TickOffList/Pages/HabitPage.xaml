<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TickOffList.Pages.HabitPage"
             BindingContext="{Binding HabitViewModel, Source={StaticResource ServiceLocator}}"
             Title="打卡">
    <!-- /* ============================================================================== -->
    <!-- * 创建人：李宏彬 -->
    <!-- * 创建时间：2022-11-10 -->
    <!-- * @version 1.0 -->
    <!-- * ==============================================================================*/ -->
    <ContentPage.Content>
        
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <!-- <RowDefinition Height="*" /> -->
                <!-- <RowDefinition Height="100" /> -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <FlexLayout Grid.Row="0" JustifyContent="SpaceAround">
                <Label Text="{Binding DayOfWeek7}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                <Label Text="{Binding DayOfWeek6}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                <Label Text="{Binding DayOfWeek5}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                <Label Text="{Binding DayOfWeek4}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                <Label Text="{Binding DayOfWeek3}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                <Label Text="{Binding DayOfWeek2}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                <Label Text="{Binding DayOfWeek1}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
            </FlexLayout>
            <FlexLayout Grid.Row="1" JustifyContent="SpaceAround">
                <Button  WidthRequest="60" HeightRequest="54" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding DateToday7}" CornerRadius="27"  BackgroundColor="White" TextColor="Black"></Button>
                <Button  WidthRequest="60" HeightRequest="54" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding DateToday6}" CornerRadius="27" BackgroundColor="White" TextColor="Black"></Button>
                <Button  WidthRequest="60" HeightRequest="54" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding DateToday5}" CornerRadius="27" BackgroundColor="White" TextColor="Black"></Button>
                <Button  WidthRequest="60" HeightRequest="54" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding DateToday4}" CornerRadius="27" BackgroundColor="White" TextColor="Black"></Button>
                <Button  WidthRequest="60" HeightRequest="54" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding DateToday3}" CornerRadius="27" BackgroundColor="White" TextColor="Black"></Button>
                <Button  WidthRequest="60" HeightRequest="54" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding DateToday2}" CornerRadius="27" BackgroundColor="White" TextColor="Black"></Button>
                <Button  WidthRequest="54" HeightRequest="54" HorizontalOptions="Center" VerticalOptions="Center"  Text="{Binding DateToday1}" CornerRadius="27" BackgroundColor="SkyBlue" TextColor="Black"></Button>
            </FlexLayout>
            <ListView Grid.Row="2" ItemsSource="{Binding Habits}" Margin="20" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="50">
                            <Grid RowDefinitions="*"
                                  ColumnDefinitions="*,*,3*,3*,2*,*">
                                <Image Grid.Row="0" Grid.Column="1" HeightRequest="50" Source="{Binding iconName}"></Image>
                                <Label FontSize="20" Grid.Column="2" Grid.Row="0" HorizontalOptions="Start" Text="{Binding title}"></Label>
                                <Label Grid.Row="0" Grid.Column="3" HeightRequest="30"  Text="{Binding describe}"></Label>
                                <Label Grid.Row="0" Grid.Column="4" HeightRequest="30"  Text="已打卡x天"></Label>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <!-- <FlexLayout Direction="Column" -->
        <!--             AlignItems="Center" -->
        <!--             JustifyContent="SpaceEvenly"> -->
        <!--     <Button Text="{Binding DateToday7}" /> -->
        <!--     <Button Text="{Binding DateToday6}" /> -->
        <!--     <Button Text="{Binding DateToday5}" /> -->
        <!--     <Button Text="{Binding DateToday4}" /> -->
        <!--     <Button Text="{Binding DateToday3}" /> -->
        <!--     <Button Text="{Binding DateToday2}" /> -->
        <!--     <Button Text="{Binding DateToday1}" /> -->
        <!-- </FlexLayout> -->
