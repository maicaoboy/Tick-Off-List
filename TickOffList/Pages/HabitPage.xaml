        <!--     <Label -->
        <!--         Text="Welcome to .NET MAUI!" -->
        <!--         VerticalOptions="Center" -->
        <!--         HorizontalOptions="Center" /> -->
        <!-- </VerticalStackLayout> -->

    </ContentPage.Content>

        

</ContentPage>