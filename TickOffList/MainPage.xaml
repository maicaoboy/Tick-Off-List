<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TickOffList.Models"
             x:Class="TickOffList.MainPage">

    <StackLayout BackgroundColor="#66000000">
        <Button
            x:Name="button_gethitokoto"
            BackgroundColor="#931F21"
            CornerRadius="10"
            Text="GetHitokoto"
            TextColor="#FFFFFF" />
        <CollectionView x:Name="StackLayoutDailySentence"
                        Margin="10"
                        x:DataType="models:DailySentence">
            <CollectionView.ItemsLayout>
                <GridItemsLayout
                    HorizontalItemSpacing="10"
                    Orientation="Vertical"
                    Span="2"
                    VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Hitokoto, StringFormat='Hitokoto :{0}'}"
                               TextColor="Black"></Label>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>